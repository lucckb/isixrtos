{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/waf"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/build"
                ]
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/waf",
                "clean"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "istclean",
            "type": "shell",
            "command": "python3",
            "args": [
                " ${workspaceFolder}/waf",
                "distclean"
            ],
            "group": "build"
        },
        {
            "label": "configure",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/waf",
                "configure",
                "--debug",
                "--board=stm32f411e_disco",
                "--crystal-hz=8000000"
            ],
            "group": "build"
        },
        {
            "label": "program",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/waf",
                "program"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}
