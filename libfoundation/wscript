#!/usr/bin/env python

import platform


def options(opt):
    pass

def configure(conf):
    pass

def build(bld):
    src = bld.path.ant_glob( '*.c' )
    src += bld.path.ant_glob( '*.cpp' )
    inc = ['./include' ]
    bld.stlib( source=src, 
            includes = inc, export_includes=inc,
            target='foundation'
    )



